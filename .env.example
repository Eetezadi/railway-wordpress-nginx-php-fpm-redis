# WordPress Railway Template - Environment Variables
# Copy to Railway service variables, replacing ${{...}} with actual Railway references

# =============================================================================
# DATABASE (Required - Add MySQL service from Railway marketplace)
# =============================================================================
WORDPRESS_DB_HOST=${{MySQL.MYSQLHOST}}
WORDPRESS_DB_NAME=${{MySQL.MYSQLDATABASE}}
WORDPRESS_DB_USER=${{MySQL.MYSQLUSER}}
WORDPRESS_DB_PASSWORD=${{MySQL.MYSQLPASSWORD}}

# =============================================================================
# REDIS (Required - Add Redis service from Railway marketplace)
# =============================================================================
REDIS_HOST=${{Redis.REDISHOST}}
REDIS_PORT=${{Redis.REDISPORT}}
REDIS_PASSWORD=${{Redis.REDISPASSWORD}}

# =============================================================================
# SERVER
# =============================================================================
PORT=80

# =============================================================================
# NGINX
# =============================================================================
NGINX_CLIENT_MAX_BODY_SIZE=256M

# =============================================================================
# PHP
# =============================================================================
PHP_UPLOAD_MAX_FILESIZE=256M
PHP_POST_MAX_SIZE=256M
PHP_MEMORY_LIMIT=512M

# =============================================================================
# WORDPRESS CONFIGURATION
# =============================================================================
# NOTE: Dynamic domain detection and Redis configuration are automatically
# injected into wp-config.php during container startup. No manual configuration needed.
# The container will automatically detect Railway domains and work with any custom domain.
